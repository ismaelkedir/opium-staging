mixin extra-choice(title, price)
      span.extra-choice(onclick="void(0)")
            span.extra-choice-title #{title}
            span.extra-choice-price +#{price} 
                  span.extra-choice-curr ETB

mixin menu-item(title, nickname, price, option1, option2, option3, chicken_price, pork_price, beef_price, description, patty, has_sauces)
   .menu.col-md-6
      h1.title #{title}
      h3.tagline #{nickname}
      br
      .row
            .col-xs-4
                  h2.price #{price} ETB
            .col-md-4
                  if(option1)
                        span.img.img-responsive.food-choice#chicken
                              .extra-price
                                    span.num +#{chicken_price}
                                    br
                                    | ETB
                  if(option2)
                        span.img.img-responsive.food-choice#pork
                              .extra-price
                                    span.num +#{pork_price}
                                    br
                                    | ETB
                  if(option3)
                        span.img.img-responsive.food-choice#beef
                              .extra-price
                                    span.num +#{beef_price}
                                    br
                                    | ETB
      p.desc #{description}
      if(patty)
            +extra-choice('Extra Patty', 60)
      if(has_sauces)
            h3.choose-sauce Choose Your Sauce
            hr(style="")
            +extra-choice('BBQ Ranch', 10)
            br
            +extra-choice('Honey Mustard', 10)
            br
            +extra-choice('Spread', 10)
            

   
