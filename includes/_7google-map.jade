
#map

script.
   function initMap() {
    var myLatLng = {lat: 9.001162, lng: 38.779561};

    // Create a map object and specify the DOM element for display.
    var map = new google.maps.Map(document.getElementById('map'), {
       center: myLatLng,
       scrollwheel: false,
       streetViewControl: false,
       disableDoubleClickZoom: true,
       draggable: false,
       zoom: 18,
       panControl: false
    });

    // Create a marker and set its position.
    var marker = new google.maps.Marker({
       map: map,
       position: myLatLng,
       title: 'Opium Addis Restaurant'
    });
   }
   
script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCN4M1vG_UiZXZLoh8yKZ0V8GVSl7YTjXQ&callback=initMap"
    async defer)
